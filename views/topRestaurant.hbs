<h4>人氣餐廳</h4>
<hr />
<div class="row g-0 justify-content-center">
  {{#each restaurants}}
  <div class="card mb-3 col-md-7">
    <div class="row g-0">

      <div class="col-6 col-sm-6 col-md-5">
        <a href="/restaurants/{{this.id}}">
          <img src="{{this.image}}" class="img-fluid rounded-start" alt="{{this.name}}">
        </a>
      </div>
      <div class="col-6 col-sm-6 col-md-7">
        <div class="card-body ">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="badge rounded-pill bg-secondary"><i class="fas fa-heart"></i> {{this.favoriteCounts}}</p>
          <p class="card-text">{{this.description}}</p>
          
          <div class="text-end">
          {{#if isFavorited }}
          <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
            <button type="submit" class="btn btn-link text-danger" data-bs-toggle="tooltip"
              title="Remove from my favorite"><i class="fas fa-heart"></i></button>
          </form>
          {{else}}
          <form action="/favorite/{{this.id}}" method="POST" style="display: contents;">
            <button type="submit" class="btn btn-link text-secondary" data-bs-toggle="tooltip"
              title="Add to my favorite"><i class="far fa-heart"></i></button>
          </form>
          {{/if}}
          </div>

        </div>
      </div>

    </div>
  </div>
  {{/each}}
</div>